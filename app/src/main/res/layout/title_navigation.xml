<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/title_navigation_background"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/uib_linerout_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true">

        <ImageView
            android:id="@+id/uib_left_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/arrow_left_bule"/>
    </LinearLayout>
    <!--<TextView-->
    <!--android:clickable="true"-->
    <!--android:id="@+id/uib_left_back_image"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="fill_parent"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:background="@drawable/title_back_bg"-->
    <!--android:drawableLeft="@drawable/arrow_left"-->
    <!--android:gravity="center_vertical"-->
    <!--android:paddingLeft="20dp"-->
    <!--android:text="    "-->
    <!--android:textColor="@color/color_white"-->
    <!--android:textSize="@dimen/title_size"/>-->

    <TextView
        android:id="@+id/uib_mid_title_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="150dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="18sp"/>

    <FrameLayout
        android:id="@+id/uib_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:clickable="true">
    </FrameLayout>

    <ImageView
        android:id="@+id/uib_imgbtn_undefine"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/uib_container"
        android:clickable="true"
        android:visibility="gone"/>

    <View
        android:id="@+id/uib_divideview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f5f5f5"></View>
</RelativeLayout>